<!doctype html>
<html class="no-js" lang="en" dir="ltr">
<head>
  <title>Ciao Baby Resturant</title>
  <meta charset="utf-8">
  <meta http-equiv="x-ua-compatible" content="ie=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Ciao Baby Restaruant, food like your Mama makes, order your takeout food easily online"/>

  <link rel="stylesheet" href="<%= url("/css/foundation.css")%>">
  <link rel="stylesheet" href="<%= url("/css/app.css")%>">
</head>

<body>
  <div class="title-bar" data-responsive-toggle="realEstateMenu" data-hide-for="small">
    <button class="menu-icon" type="button" data-toggle></button>
    <div class="title-bar-title">Menu</div>
  </div>
  <div class="top-bar" id="realEstateMenu">
    <div class="top-bar-left">
      <ul class="menu" data-responsive-menu="accordion">
        <li class="menu-text"><a href="/">Ciao Baby Restaurant</a></li>
        <li><a class="button" href="/dishes">Menu</a></li>
      </ul>
    </div>

    <div class="top-bar-right">
      <ul class="menu">
        <% if current_user && current_user.admin? %>
          <li>Welcome Administrator</li>
          <li><a class="button" href="/auth/logout">Log Out</a></li>

        <% elsif current_user %>
          <li class="login-name" >Logged in as <%= current_user.username %></li>
          <li><a  class="button" href="/auth/logout">Log Out</a></li>
        <% else %>
          <li><a class="button" href="/account_creation">Create Account</a></li>
          <li><a class="button" href="/auth/login">Log In</a></li>
        <% end %>
      </ul>
    </div>
  </div>

  <% if flash[:success] %>
    <div id="flash" class="alert-box success">
      <strong><%= flash[:success] %></strong>
      <a href="#" class="close">⊗</a>
    </div>
  <% end %>

  <% if flash[:error] %>
  <div class="row">
    <div id="flash" class="alert-box alert">
      <div style="color:red;">
        <%= flash[:error] %>
        <a href="#" class="close">⊗</a>
      </div>
    </div>
  </div>
  <% end %>

  <%= yield %>

  <footer class="footer">
    <div class="row expanded callout secondary">
    <div class="row">

      <div class="medium-4 columns">
        <ul class="menu">
          <li><a class="footer-menu" href="/sitemap">Site Map</a></li>
          <li><a class="footer-menu" href="/contact">Contact</a></li>
        </ul>
      </div>

      <div class="medium-8 columns">
        <ul class="menu float-right">
          <li><a class="fa fa-facebook-official" aria-hidden="true" href="#"></a></li>
          <li><a class="fa fa-pinterest-square" aria-hidden="true" href="#"></a></li>
          <li><a class="fa fa-foursquare" aria-hidden="true" href="#"></a></li>
          <li><a class="fa fa-tripadvisor" aria-hidden="true" href="#"></a></li>
          <li class="menu-text">&copy; Ciao Baby Restaurant | All Rights Reserved | Terms and Conditions Apply.</li>
        </ul>
      </div>
    </div>
  </footer>
    <script src="https://use.fontawesome.com/f5e451c26b.js"></script>
    <script src="<%= url("/js/vendor/jquery.js")%>"></script>
    <script src="<%= url("/js/vendor/what-input.js")%>"></script>
    <script src="<%= url("/js/vendor/foundation.js")%>"></script>
    <script src="<%= url("/js/app.js")%>"></script>
  </body>
</html>
