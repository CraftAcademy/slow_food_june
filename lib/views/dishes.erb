<% if @dishes.any? %>
  <div class="row">
    <div class="row column">
      <h2 style="text-align:center;">Make a selection from our mouth watering dishes</h2>
      <% @dishes.keys.each do |key| %>
        <div id="cat_<%= key %>">
          <h3><%= category_name(key) %></h3>
            <ul>
              <div class="row small-up-1 medium-up-2 large-up-3">
                <% @dishes[key].each do |dish| %>
                  <div class="column">
                    <div class="callout">
                      <li class="lead"><%= dish.name %><br><span class="subheader"><%= dish.description %></span><br><span class="subheader"><%= dish.price %></span><br>
                        <form action="/add_to_order" method="post" id="<%= dish.id %>">
                          <input type="hidden" value="<%= dish.id %>" name="item">
                          <input type="submit" value="Add to order">
                        </form>
                      </li>
                    </div>
                  </div>
                <% end %>
            </div>
        </div>
    </div>
  </div>

<% else %>
    <h2 style="text-align:center;">There are no dishes to display</h2>
<% end %>
